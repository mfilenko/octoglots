{
  "name": "@msp/octoglots",
  "version": "0.0.1",
  "description": "Search GitHub users by the languages of their repositories.",
  "scripts": {
    "test": "npm run lint && jest",
    "lint": "npx xo",
    "build": "tsc",
    "start": "node dist/server",
    "docker:build": "docker build --tag mfilenko/octoglots .",
    "docker:start": "docker run --name octoglots --publish 80:3000 --detach mfilenko/octoglots",
    "docker:stop": "docker stop octoglots"
  },
  "author": {
    "name": "Max Filenko",
    "email": "contact@filenko.ms"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mfilenko/octoglots.git"
  },
  "keywords": [
    "node",
    "nodejs",
    "typescript",
    "github",
    "demo"
  ],
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/mfilenko/octoglots/issues"
  },
  "homepage": "https://github.com/mfilenko/octoglots#readme",
  "engines": {
    "node": ">=12",
    "npm": ">=6"
  },
  "devDependencies": {
    "@types/compression": "0.0.36",
    "@types/errorhandler": "0.0.32",
    "@types/express": "^4.16.1",
    "@types/jest": "^24.0.12",
    "@types/node-fetch": "^2.3.3",
    "@types/parse-link-header": "^1.0.0",
    "@types/pino": "^5.8.6",
    "@types/supertest": "^2.0.7",
    "@typescript-eslint/eslint-plugin": "^1.7.0",
    "eslint-config-xo-typescript": "^0.10.1",
    "jest": "^24.7.1",
    "supertest": "^4.0.2",
    "ts-jest": "^24.0.2",
    "typescript": "^3.4.5",
    "xo": "^0.24.0"
  },
  "xo": {
    "extends": "xo-typescript",
    "extensions": [
      "ts"
    ],
    "ignores": [
      "src/__tests__"
    ],
    "rules": {
      "@typescript-eslint/indent": [
        "error",
        2,
        {
          "SwitchCase": 1
        }
      ],
      "comma-dangle": [
        "error",
        "always-multiline"
      ]
    }
  },
  "dependencies": {
    "compression": "^1.7.4",
    "errorhandler": "^1.5.0",
    "express": "^4.16.4",
    "express-pino-logger": "^4.0.0",
    "node-fetch": "^2.5.0",
    "parse-link-header": "^1.0.1",
    "pino": "^5.12.3"
  }
}
